package com.LeeGainer.Battleship2;

import java.util.Scanner;

public class Console {
	
	private static Scanner myScanner = new Scanner(System.in);
	
	// I/O
	
	/*
	 * Outputs message
	 * String -> void
	 */
	public void displayMessage(String string) {
		System.out.println(string);
	}
	
	/*
	 * Displays any Gameboard String[][]
	 * Gameboard object -> void
	 */
	protected void displayBoard(String[][] array) {
		
		int row = Gameboard.getMaxRow() + 2;
		int col = Gameboard.getMaxCol() + 6;
		
		for(int i = 0; i < row; i++) {
			System.out.println("\r");
			for(int j = 0; j < col; j++) {
				System.out.print(array[i][j]);
			}
		}		
		displayMessage("\n");
	}

	/*
	 * Gets coordinate from user or computer
	 * Player -> int
	 */
	public int getCoordinate(int minValue, int maxValue) {
		
		String coordinate;
			
		// Validate coordinate
		while(true) {
			coordinate = myScanner.next();
			
			if (coordinate.matches("[0-9]")) {
				break;
			} else {
				displayMessage("That input is invalid.\n"
						+ "Please enter a number between 0 and " + Integer.toString(maxValue) + ". ");
			}
		}
			
		return Integer.parseInt(coordinate);
	}
		
}
